@model CreateSliderRequest

@{
    ViewData["Title"] = "CreateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Feature Ekle</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Slider Yazısı Ekle</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">1. Başlığı Gir</label>
                                <input type="text" class="form-control" asp-for="Title" id="Title" placeholder="Enter Category Name">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Description">1. Açıklamayı Gir</label>
                                <input type="text" class="form-control" asp-for="Description" id="Description" placeholder="Enter Category Name">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Slider Yazısı Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>