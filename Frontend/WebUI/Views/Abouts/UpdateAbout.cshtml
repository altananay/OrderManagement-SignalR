@model UpdateAboutRequest

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkımızda Ekle</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Hakkımızda Ekle</div>
                        </div>
                        <input type="hidden" asp-for="Id" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Başlık Adı</label>
                                <input type="text" class="form-control" asp-for="Title" id="Title" placeholder="Enter Title">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="ImageUrl">Görsel url gir</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl" placeholder="Enter Image Url">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Description">Açıklamayı Gir</label>
                                <textarea rows="5" type="text" class="form-control" asp-for="Description" id="Description" placeholder="Enter Description" ></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>