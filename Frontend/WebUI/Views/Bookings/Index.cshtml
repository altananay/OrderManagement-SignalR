        <script type="text/javascript">
            $(document).ready(() => {
                let connection = new signalR.HubConnectionBuilder()
                    .withUrl("https://localhost:7121/SignalRHub").build();

                connection.start().then(() => {
                    setInterval(() => {
                        connection.invoke("GetBookingList");
                    }, 5000)

                }).catch((error) => {
                    console.log(error)
                });

                connection.on("ReceiveBookingList", (value) => {
                    console.log(value)
                    let tablehtml = `<table class=table mt-3><thead>
                                                 <tr>
                                                 <th scope="col">#</th>
                                                 <th scope="col">Ad Soyad</th>
                                                 <th scope="col">Telefon</th>
                                                 <th scope="col">Kişi Sayısı</th>
                                                 <th scope="col">Açıklama</th>
                                                 <th scope="col">Rezervasyon Durumu</th>
                                                 <th scope="col">Sil</th>
                                                 <th scope="col">Güncelle</th>
                                                 <th scope="col">Onayla</th>
                                                 <th scope="col">İptal Et</th>
                                                 </tr>
                                                 </thead>
                                                 <tbody>`
                    $.each(value, (index, item) => {
                        tablehtml += `<tr>
                                                <th>${index + 1}</th>
                                                <td>${item.name}</td>
                                                <td>${item.phone}</td>
                                                <td>${item.personCount}</td>
                                                <td>${item.description}</td>
                                                <td>${item.status}</td>
                                                <td><a href="/Booking/DeleteBooking/${item.id}" class="btn btn-outline-danger">Sil</a></td>
                                                            <td><a href="/Booking/UpdateBooking/${item.id}" class="btn btn-outline-success">Güncelle</a></td>
                                                            <td><a href="/Booking/BookingStatusApproved/${item.id}" class="btn btn-outline-info">Onayla</a></td>
                                                            <td><a href="/Booking/BookingStatusCancelled/${item.id}" class="btn btn-outline-dark">İptal Et</a></td>
                                                </tr>`
                    });
                    tablehtml += "</tbody></table>";
                    $("#bookingList").html(tablehtml);
                })

            });
        </script>

